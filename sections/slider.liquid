<div id="ss-slider" class="section-{{ section.id }} slider-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="slider-items-{{ section.id }}">
        <div class="slider-left-{{ section.id }}">
          {% if heading != blank %}
            <div class="slider-heading-{{ section.id }}">{{ heading }}</div>
          {% endif %}
          {% if sub_heading != blank %}
            <div class="slider-subheading-{{ section.id }}">{{ sub_heading }}</div>
          {% endif %}
        </div>
        <div class="slider-right-{{ section.id }}">
          <div class="slider-slider-{{ section.id }} swiper preview">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <a href="{% if block.type == "custom" %}{{ block.settings.url }}{% elsif block.type == "product" %}{{ block.settings.product.url }}{% elsif block.type == "collection" %}{{ block.settings.collection.url }}{% elsif block.type == "blog" %}{{ block.settings.blog.url }}{% elsif block.type == "article" %}{{ block.settings.article.url }}{% endif %}" class="slider-slide-{{ section.id }} swiper-slide">
                  <div class="slider-image-{{ section.id }}">
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.alt }}" {% if lazy %}lazy="loading"{% endif %}>
                    {% else %}
                      {% if block.type == "product" and block.settings.product.featured_image != blank %}
                        <img src="{{ block.settings.product.featured_image | image_url }}" alt="{{ block.settings.product.featured_image.alt }}" {% if lazy %}lazy="loading"{% endif %}>
                      {% elsif block.type == "collection" and block.settings.collection.image != blank %}
                        <img src="{{ block.settings.collection.image | image_url }}" alt="{{ block.settings.collection.image.alt }}" {% if lazy %}lazy="loading"{% endif %}>
                      {% elsif block.type == "article" and block.settings.article.image != blank %}
                        <img src="{{ block.settings.article.image | image_url }}" alt="{{ block.settings.article.image.alt }}" {% if lazy %}lazy="loading"{% endif %}>
                      {% else %}
                        {{ 'image' | placeholder_svg_tag }}
                      {% endif %}
                    {% endif %}
                  </div>
                  <div class="slider-content-{{ section.id }}">
                    {% if block.type == "custom" and block.settings.sub_title != blank %}
                      <p class="slider-subtitle-{{ section.id }}">{{ block.settings.sub_title }}</p>
                    {% endif %}

                    {% if block.type == "product" %}
                      {% if block.settings.title != blank %}
                         <p class="slider-title-{{ section.id }}">{{ block.settings.title }}</p>
                      {% elsif block.settings.product.title != blank %}
                         <p class="slider-title-{{ section.id }}">{{ block.settings.product.title }}</p>
                      {% endif %}
                    {% elsif block.type == "collection" %}
                      {% if block.settings.title != blank %}
                         <p class="slider-title-{{ section.id }}">{{ block.settings.title }}</p>
                      {% elsif block.settings.collection.title != blank %}
                         <p class="slider-title-{{ section.id }}">{{ block.settings.collection.title }}</p>
                      {% endif %}
                    {% elsif block.type == "blog" %}
                      {% if block.settings.title != blank %}
                         <p class="slider-title-{{ section.id }}">{{ block.settings.title }}</p>
                      {% elsif block.settings.blog.title != blank %}
                         <p class="slider-title-{{ section.id }}">{{ block.settings.blog.title }}</p>
                      {% endif %}
