{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  slide_title_font | font_face: font_display: 'swap' }}
  {{  slide_sub_title_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .slider-items-{{ section.id }} {
    background-color: {{ body_bg_color }};
    border: {{ body_border_thickness }}px solid {{ body_border_color }};
    border-radius: {{ body_radius }}px;
    padding: {{ body_padding_vertical_mobile }}px {{ body_padding_horizontal_mobile }}px;
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: {{ layout_gap_mobile }}px;
    align-items: center;
  }

  .slider-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }
  
  .slider-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .slider-subheading-{{ section.id }} {
    margin-top: {{ sub_heading_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ sub_heading_align_mobile }};
  }

  .slider-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .slider-right-{{ section.id }} {
    position: relative;
    min-width: 0;
  }

  .slider-btn-prev-{{ section.id }},
  .slider-btn-next-{{ section.id }} {
    position: absolute;
    z-index: 2;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: 50%;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
  }

  .slider-btn-prev-{{ section.id }} {
    left: 0px !important;
  }

  .slider-btn-next-{{ section.id }} {
    right: 0px !important;
  }

  .slider-btn-prev-{{ section.id }} svg,
  .slider-btn-next-{{ section.id }} svg {
    height: {{ arrow_icon_size_mobile }}px;
    width: {{ arrow_icon_size_mobile }}px;
  }

  .slider-btn-next-{{ section.id }} svg {
    transform: rotate(270deg);
    margin-left: 2px;
  }

  .slider-btn-prev-{{ section.id }} svg {
    transform: rotate(90deg);
    margin-left: -2px;
  }

  .slider-btn-prev-{{ section.id }} svg path,
  .slider-btn-next-{{ section.id }} svg path {
    fill: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .slider-btn-prev-{{ section.id }}:hover ,
  .slider-btn-next-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
    background: {{ arrow_bg_hover_color }};
  }

  .slider-btn-prev-{{ section.id }}:hover svg path,
  .slider-btn-next-{{ section.id }}:hover svg path {
    fill: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .slider-btn-prev-{{ section.id }}.swiper-button-disabled,
  .slider-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
    transition: all 0.3s ease 0s;
  }

  .slider-slider-{{ section.id }} {
    width: 100%;
    max-width: {{ slider_width_mobile }}%;
  }

  .slider-slider-{{ section.id }} .swiper-wrapper {
    align-items: stretch;
  }

  .slider-slide-{{ section.id }} {
    display: flex;
    flex-direction: column;
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px;
    border-radius: {{ card_radius }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    background-color: {{ card_bg_color }};
    box-sizing: border-box !important; 
    height: auto !important;
    text-decoration: none;
    overflow: hidden;
    height: auto !important;
  }

  .slider-image-{{ section.id }} {
    flex: 1 1 auto;
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .slider-image-{{ section.id }} img,
  .slider-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
  }

  .slider-image-{{ section.id }} svg {
    background-color: #DDDDDD;
  }

  .slider-content-{{ section.id }} {
    /* flex: 1 1 auto; */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
    border-radius: {{ content_radius }}px;
    border: {{ content_border_thickness }}px solid {{ content_border_color }};
    background-color: {{ content_bg_color }};
    box-sizing: border-box !important; 
  }

  .slider-title-{{ section.id }} {
    margin: 0px;
    font-size: {{ slide_title_size_mobile }}px;
    color: {{ slide_title_color }};
    line-height: {{ slide_title_height }}%;
    text-align: {{ slide_title_align }};
    text-transform: unset;
    font-weight: 700;
  }
 
  .slider-title-{{ section.id }}:nth-child(2) {
    margin-top: {{ slide_title_mt | times: 0.75 | round: 0 }}px;
  }

  .slider-subtitle-{{ section.id }} {
    margin: 0px;
    font-size: {{ slide_sub_title_size_mobile }}px;
    color: {{ slide_sub_title_color }};
    line-height: {{ slide_sub_title_height }}%;
    text-align: {{ slide_sub_title_align }};
    text-transform: unset;
  }

  .slider-scrollbar-{{ section.id }} {
    margin-top: {{ scrollbar_mt | times: 0.75 | round: 0 }}px !important;
    position: static !important;
    height: {{ scrollbar_height }}px !important;
    background-color: {{ scrollbar_bg_color }} !important;
  }

  .slider-scrollbar-{{ section.id }} .swiper-scrollbar-drag {
    display: block !important;
    background-color: {{ scrollbar_drag_bg_color }}!important;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .slider-items-{{ section.id }} {
      padding: {{ body_padding_vertical }}px {{ body_padding_horizontal }}px;
      grid-template-columns: calc(100% - {{ slider_width }}%) {{ slider_width }}%;
      gap: {{ layout_gap }}px;
    }

    .slider-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .slider-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .slider-subheading-{{ section.id }} {
      margin-top: {{ sub_heading_mt }}px;
      text-align: {{ sub_heading_align }};
    }

    .slider-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .slider-btn-prev-{{ section.id }},
    .slider-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
    }

    .slider-btn-prev-{{ section.id }} {
      left: -{{ arrow_size | times: 0.5 }}px !important;
    }
  
    .slider-btn-next-{{ section.id }} {
      right: -{{ arrow_size | times: 0.5 }}px !important;
    }

    .slider-btn-prev-{{ section.id }} svg,
    .slider-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      width: {{ arrow_icon_size }}px;
    }

    .slider-slide-{{ section.id }} {
      padding: {{ card_padding_vertical }}px {{ card_padding_horizontal }}px;
    }

    .slider-content-{{ section.id }} {
      padding: {{ content_padding_vertical }}px {{ content_padding_horizontal }}px;
    }

    .slider-title-{{ section.id }} {
      font-size: {{ slide_title_size }}px;
    }

    .slider-title-{{ section.id }}:nth-child(2) {
      margin-top: {{ slide_title_mt }}px;
    }

    .slider-subtitle-{{ section.id }} {
      font-size: {{ slide_sub_title_size }}px;
    }

    .slider-slider-{{ section.id }} {
      max-width: 100%;
    }

    .slider-scrollbar-{{ section.id }} {
      margin-top: {{ scrollbar_mt }}px !important;
    }
  }
  
{%- endstyle -%}

